{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "moduleResolution": "node",

    "rootDir": ".",
    "baseUrl": "./packages",
    "paths": {
      "@farmbot/*": ["./*/src"]
    },
    "typeRoots": ["./node_modules/@types", "./packages/types"],

    "declaration": true,
    "composite": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
